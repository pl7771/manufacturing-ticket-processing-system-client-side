@model IEnumerable<Ticketing_System_TILE03.Models.Domain.ContractType>
@{


}

<h2>@ViewData["Title"]</h2>
<hr class="my-2">

<form>
    <div class="form-inline my-2">
        <div class="form-group">
            <label for="nullableStatus"></label>
            <select id="nullableStatus" style=" color: #004289;" name="nullableStatus" asp-items="@(ViewData["Statussen"] as SelectList)" class="form-control">
                <option value="">-- kies een status --</option>
            </select>
        </div>
        <button type="submit" class="btn btn-secondary ml-1">filter</button>
        <a asp-controller="ContractType" asp-action="Create" class="btn btn-secondary text-right ml-5">nieuw contracttype</a>
    </div>
</form>


<table class="table table-striped table-bordered table-responsive-sm">

    <thead>
        <tr>
            <th>
                Naam
            </th>
            <th>
                Status
            </th>
            <th>
                Aantal lopende contracten
            </th>
            <th>
                Actie
            </th>
        </tr>
    </thead>
    @if(Model.Count() == 0)
    {
<div class="alert alert-info" role="alert">
    Geen contracttypes gevonden.
</div>
    }
    else {
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Naam
            </td>
            <td>
                @item.Status
            </td>
            <td>
                @item.aantalContracten
            </td>
            <td>
                <a asp-controller="ContractType" asp-action="Details" asp-route-id="@item.ContractTypeId">Details</a>
                <a asp-controller="ContractType" asp-action="Edit" asp-route-id="@item.ContractTypeId">Edit</a>
                <a asp-controller="ContractType" asp-action="Delete" asp-route-id="@item.ContractTypeId">Verwijder</a>
            </td>
        </tr>
        }

    </tbody>
    }

</table>