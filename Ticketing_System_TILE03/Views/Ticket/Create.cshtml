@model Ticketing_System_TILE03.Models.ViewModels.TicketCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewData["AvailableCompanies"] != null) //Dan is de rol SupportManager
            {
                <div class="form-group">
                    <label>Bedrijf</label>
                    <select style="color: #004289;" asp-for="Company"  asp-items="@(ViewData["AvailableCompanies"] as SelectList)" class="form-control">
                        <option value="">-- Select company --</option>
                    </select>
                </div>
            }

            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Omschrijving" class="control-label"></label>
                <input asp-for="Omschrijving" class="form-control" />
                <span asp-validation-for="Omschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opmerkingen" class="control-label"></label>
                <input asp-for="Opmerkingen" class="form-control" />
                <span asp-validation-for="Opmerkingen" class="text-danger"></span>
            </div>
            @if (ViewData["Contracts"] != null)
            {
                <div class="form-group">
                    <label>Available contracts</label>
                    <select style="color: #004289;" asp-for="Contract" asp-items="@(ViewData["Contracts"] as SelectList)" class="form-control">
                        <option value="">-- Select contract --</option>
                    </select>
                    <span asp-validation-for="Contract" class="text-danger"></span>
                </div>
            }
            <!--
            <div class="form-group">
                <label asp-for="DatumAangemaakt" class="control-label"></label>
                <input asp-for="DatumAangemaakt" class="form-control" />
                <span asp-validation-for="DatumAangemaakt" class="text-danger"></span>
            </div>
            -->
            <hr />
            <div class="form-group">
                <label asp-for="ImageDescription" class="control-label">Uitleg bijlage</label>
                <input asp-for="ImageDescription" class="form-control" />
            </div>
            <input asp-for="MyFile" />

            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}