@model Ticketing_System_TILE03.Models.Domain.Contract

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Contract @Model.ContractId </h4>
    <hr />
    <dl class="row my-3">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type.Naam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type.Naam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDatum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDatum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EindDatum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EindDatum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <!--ContractType details-->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type.ManierAanmakenTicket)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type.ManierAanmakenTicket)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type.GedekteTijdstippen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type.GedekteTijdstippen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type.MaximaleAfhandeltijd)
        </dt>
        <dd class="col-sm-10">
            @TimeSpan.FromHours(Model.Type.MaximaleAfhandeltijd).ToString(@"d\.hh\:mm") (dagen.uren:minuten)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type.MinimaleDoorlooptijd)
        </dt>
        <dd class="col-sm-10">
            @TimeSpan.FromHours(Model.Type.MinimaleDoorlooptijd).ToString(@"d\.hh\:mm") (dagen.uren:minuten)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type.Prijs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type.Prijs) EUR
        </dd>
        <dt class="col-sm-2" style="margin-top: ">
            <a asp-action="Index">Terug naar overzicht</a>
        </dt>
    </dl>
